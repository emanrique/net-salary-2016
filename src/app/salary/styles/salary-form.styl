@import '../../commons/styles/main.styl'

.SalaryForm
  position absolute
  top 50%
  left 50%
  transform translate(-50%,-50%)
  width 100%
  text-align left
  margin 0 auto
  padding 2em 0
  max-width 860px
  font-size 2.5em

  &.is-change
    .QuestionList
      .QuestionList-item
        animation moveUpFromDown 0.4s both

  .SubmitButton
    display none

.QuestionList
  list-style none
  margin 0
  padding 0
  position relative

  .QuestionList-item
    z-index 100
    position relative
    visibility hidden
    height 0
    transition visibility 0s .4s, height 0s .4s

    &.is-active
      height auto
      visibility visible
      transition none

      label
        transform translateY(0)
        transition none

      input
        opacity 1
  span
    overflow hidden
    display block

  label
    color rgba(0, 0, 0, 0.45098)
    display block
    transform translateY(-100%)
    transition transform 0.4s

  input
    background transparent
    padding .5em 1em .5em .7em
    margin 0.3em 0 0 0
    padding 0.5em 1em 0.5em 0.7em
    width calc(100% - 2em)
    border none
    background rgba(0,0,0,.1)
    color rgba(0,0,0,0.8)
    font-size 1em
    line-height 1
    opacity 0
    transition opacity 0.3s
    outline none

.Controls
  position relative

  .ErrorMessage
    position absolute

  .Number
    position absolute
    right 0
    overflow hidden
    margin 0.4em 0
    width 3em
    font-weight 700
    font-size 0.4em

    &:after
      position absolute
      left 50%
      content '/'
      opacity .4
      transform translateX(-50%)

    span
      float right
      width 40%
      text-align center

    .Number-current
      float left

  .ProgressBar
    width 0%
    height 0.15em
    background rgba(0,0,0,0.3)
    transition width 0.4s ease-in-out

    &:before
      position absolute
      top auto
      width 100%
      height inherit
      background rgba(0,0,0,0.05)
      content ''

  .NextButton
    position absolute
    right 0
    bottom 0.25em
    display block
    padding 0
    width 2em
    height 2em
    border none
    background none
    color rgba(0,0,0,0.4)
    text-align center
    opacity 0
    z-index 100
    cursor pointer
    transition transform 0.3s, opacity 0.3s
    transform translateX(-20%)
    pointer-events none
    font-size 100%

    &.is-show
      opacity 1
      transform translateX(0)
      pointer-events auto

    &:after
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      content "\e600"
      text-transform none
      font-weight normal
      font-style normal
      font-variant normal
      font-family 'icomoon'
      line-height 2
      speak none


@keyframes moveUpFromDown
  from
    transform translateY(100%)

  to
    transform translateY(0)
